# App
APP_NAME=go-clean-template
APP_VERSION=1.0.0
# HTTP settings
HTTP_PORT=8080
HTTP_USE_PREFORK_MODE=false
# Logger
LOG_LEVEL=debug
# PG (include sslmode in URL: sslmode=disable for local, sslmode=require for production)
PG_POOL_MAX=2
PG_URL=postgres://user:myAwEsOm3pa55@w0rd@localhost:5432/db?sslmode=disable
# gRPC
GRPC_PORT=8081
# RMQ
RMQ_RPC_SERVER=rpc_server
RMQ_RPC_CLIENT=rpc_client
RMQ_URL=amqp://guest:guest@localhost:5672/
RMQ_EVENT_EXCHANGE=domain.events
# NATS
NATS_RPC_SERVER=rpc_server
NATS_URL=nats://guest:guest@localhost:4222/
# Metrics
METRICS_ENABLED=true
# Swagger
SWAGGER_ENABLED=true
# Migration
MIGRATION_ENABLED=true
MIGRATION_RETRY_ATTEMPTS=20
MIGRATION_RETRY_INTERVAL_SEC=1
# Outbox (event publishing)
OUTBOX_ENABLED=true
OUTBOX_POLL_INTERVAL_MS=1000
OUTBOX_BATCH_SIZE=100
OUTBOX_MAX_RETRIES=5
# JWT
JWT_SECRET=your-super-secret-key-change-in-production
